<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/sosbg"
    tools:context=".Myinfo"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="20dp"
            android:text="SOS360"
            android:textColor="#1ACEFB"
            android:textSize="36sp"
            android:textStyle="bold"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <ScrollView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/customedit_text">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User's Details"
                    android:id="@+id/heading"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/red"/>

                <ImageButton
                    android:id="@+id/userprofilepic"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:paddingBottom="6dp"
                    android:src="@drawable/baseline_person_add_24"
                    android:contentDescription="@string/upload_your_profile_image"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="110dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload your picture"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Name"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/customedit_text"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:drawablePadding="8dp"
                    android:padding="8dp"/>

                <EditText
                    android:id="@+id/fathername"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Father's Name"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/customedit_text"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:drawablePadding="8dp"
                    android:padding="8dp"/>

                <EditText
                    android:id="@+id/mothername"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Mother's Name"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/customedit_text"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:drawablePadding="8dp"
                    android:padding="8dp"/>

                <EditText
                    android:id="@+id/alternativenumber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Alternative Number"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/customedit_text"
                    android:drawableLeft="@drawable/baseline_local_phone_24"
                    android:inputType="number"
                    android:drawablePadding="8dp"
                    android:padding="8dp"/>

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Address"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/customedit_text"
                    android:drawableLeft="@drawable/baseline_maps_home_work_24"
                    android:drawablePadding="8dp"
                    android:padding="8dp"/>

                <EditText
                    android:id="@+id/bloodgroup"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Blood group"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/customedit_text"
                    android:drawableLeft="@drawable/baseline_bloodgroup_24"
                    android:drawablePadding="8dp"
                    android:padding="8dp"/>

                <EditText
                    android:id="@+id/diseases"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Diseases"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/customedit_text"
                    android:drawableLeft="@drawable/baseline_sick_24"
                    android:drawablePadding="8dp"
                    android:padding="8dp"/>

                <EditText
                    android:id="@+id/lastcheckup"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Last Health Checkup"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/customedit_text"
                    android:drawableLeft="@drawable/baseline_health_and_safety_24"
                    android:drawablePadding="8dp"
                    android:padding="8dp"/>


                <Button
                    android:id="@+id/nextbutton"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/yellow"
                    android:text="Next"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:cornerRadius="20dp" />

            </LinearLayout>
        </ScrollView>

</androidx.cardview.widget.CardView>
    </RelativeLayout>
